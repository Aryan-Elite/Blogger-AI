# Copy this file to .env and fill in values

# Core
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173

# Security
# Generate a strong secret (e.g., `openssl rand -hex 32`)
JWT_SECRET=replace-with-strong-secret

# Database
# Example: mongodb://localhost:27017/blogger-ai
DATABASE_URL=mongodb://localhost:27017/blogger-ai

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# Absolute callback URL recommended in production (Render):
# e.g. https://blogger-ai.onrender.com/api/auth/google/callback
GOOGLE_CALLBACK_URL=
# Callback configured at Google must be http://localhost:3000/api/auth/google/callback in dev

# Optional APIs
OPENAI_API_KEY=
HF_TOKEN=      
# use hf_token if you are using any open source model for image generation


